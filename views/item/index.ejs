<!doctype html>
<html lang="en">
<head>
    <%- include('../parts/header_general') %>
</head>
<body class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3">
            <% if (messages.success) { %>
                <div class="alert alert-success" role="alert"><%- messages.success %></div>
            <% } %>
            <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert"><%- messages.error %></div>
            <% } %>
            <a href="/items/create" class="btn btn-sm btn-primary" role="button">Create</a>
            <br /><br />
            <div class="table-responsive">
                <table class="table table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% items.data.forEach(function(item){ %>
                            <tr>
                                <td><%= item.id %></td>
                                <td><%= item.name %></td>
                                <td><%= item.amount %></td>
                                <td>
                                    <a href="../items/view/<%= item.id %>" class="btn btn-sm btn-info" role="button">View</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <%- include('../parts/footer_content') %>
        </div>
    </div>
    <%- include('../parts/footer_general') %>
</body>
</html>